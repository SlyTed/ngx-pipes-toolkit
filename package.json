{
  "name": "ngx-pipes-toolkit",
  "description": "Complementary pipes library for Angular",
  "author": "Perros Ted",
  "version": "0.2.2-patch",
  "license": "MIT",
  "keywords": ["ng", "ngx", "angular", "pipes"],
  "repository": {
    "type": "git",
    "url": "https://github.com/SlyTed/ngx-pipes-toolkit"
  },
  "scripts": {
    "build": "ng build",
    "test": "vitest",
    "test:coverage:local": "vitest --coverage.enabled=true --coverage.reporter=html",
    "test:coverage:ci": "vitest --coverage.enabled=true --coverage.reporter=lcov",
    "lint": "npx @biomejs/biome check",
    "lint:write": "npx @biomejs/biome check --write",
    "publish": "npm run build && cd ./dist && npm publish --access=public"
  },
  "peerDependencies": {
    "@angular/core": ">=14",
    "convert-units": "^2.3.4",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "^1.6.2",
    "@analogjs/vitest-angular": "^1.6.2",
    "@angular-devkit/build-angular": "^18.1.1",
    "@angular/platform-browser-dynamic": "^18.1.1",
    "@biomejs/biome": "1.8.3",
    "@types/convert-units": "^2.3.9",
    "@types/lodash": "^4.17.7",
    "@vitest/coverage-v8": "^1.6.0",
    "ng-packagr": "^18.1.0",
    "typescript": "^5.5.3",
    "vitest": "^1.6.0"
  }
}
